/*jslint node: true */
'use strict';

module.exports = {
  'build': {
    'flags': {
      'q': 'quiet'
    }

  , 'run': function ( d, v, namedArgs ) {
      v.rm( 'www-built' );

      d.resolve(v.spawn('node', [ 'tools/r.js', '-o', 'tools/build.js' ], {
        'useConsole': !namedArgs.quiet
      }));
    }
  }
};
